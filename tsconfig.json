{
	"compilerOptions": {
		"outDir"                      : "./dist/",
		"typeRoots"                   : [
			"./node_modules/@types"
		],
		"allowSyntheticDefaultImports": true,
		"alwaysStrict"                : true,
		"sourceMap"                   : true,
		"declaration"                 : true,
		"declarationMap"              : true,
		"strict"                      : true,
		"noImplicitReturns"           : true,
		"noImplicitAny"               : true,
		"downlevelIteration"          : true,
		"experimentalDecorators"      : true,
		"resolveJsonModule"           : true,
		"pretty"                      : true,
		"listEmittedFiles"            : true,
		"newLine"                     : "lf",
		"module"                      : "commonjs",
		"moduleResolution"            : "node",
		"target"                      : "ES2016",
		"lib"                         : [
			"es6",
			"es2015",
			"es7",
			"es2016",
			"es2017",
			"es2018"
		]
	},
	"include"        : [
		"./src/**/*",
		"./src/types"
	]
}
